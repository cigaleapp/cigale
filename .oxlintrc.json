{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"plugins": ["import", "jsdoc", "node", "promise", "vitest"],
	"rules": {
		"require-property-description": "off",
		"no-defaults": "off",
		"no-console": [
			"error",
			{
				"allow": ["warn", "error", "info", "dir", "time", "timeEnd", "debug"]
			}
		],
		// TODO: Waiting for https://github.com/oxc-project/oxc/pull/15009
		// "import/extensions": [
		// 	"error",
		// 	"ignorePackages",
		// 	{
		// 		"pathGroupOverrides": [
		// 			{ "pattern": "$app/*", "action": "ignore" },
		// 			{ "pattern": "~icons/*/*", "action": "ignore" }
		// 		]
		// 	}
		// ],
		"no-restricted-imports": [
			"error",
			{
				"paths": [
					{
						"name": "$lib/utils.js",
						"importNames": ["logexpr"],
						"message": "You left out a debug log"
					},
					{
						"name": "src/lib/utils.js",
						"importNames": ["logexpr"],
						"message": "You left out a debug log"
					},
					{
						"name": "./utils.js",
						"importNames": ["logexpr"],
						"message": "You left out a debug log"
					},
					{
						"name": "./lib/utils.js",
						"importNames": ["logexpr"],
						"message": "You left out a debug log"
					}
				]
			}
		]
	}
}
