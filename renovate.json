{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", "abandonments:recommended"],
	"schedule": "* 0-7 * * 1",
	"prHourlyLimit": 6,
	"prConcurrentLimit": 4,
	"commitMessagePrefix": "⬆️ ",
	"rangeStrategy": "bump",
	"abandonmentThreshold": "2 years",
	"packageRules": [
		{
			"description": "Auto-merge updates to linters and formatters",
			"matchDepTypes": ["devDependencies"],
			"matchPackageNames": [
				"eslint",
				"@eslint/*",
				"eslint-*",
				"oxlint",
				"oxlint-*",
				"knip",
				"prettier",
				"prettier-*",
				"lint-staged",
				"svelte-check"
			],
			"automerge": true
		},
		{
			"description": "Auto-merge patch upgrades (E2E tests should validate that nothing catastrophic happens)",
			"matchUpdateTypes": ["patch"],
			"automerge": true
		},
		{
			"description": "Group playwright docker image & npm package",
			"matchPackageNames": [
				"@playwright/test",
				"mcr.microsoft.com/playwright",
				"ghcr.io/gwennlbh/playwright-bun"
			],
			"groupName": "Playwright",
			"automerge": true
		}
	]
}
