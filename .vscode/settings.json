{
	"cssvar.extensions": ["css", "svelte"],
	"cssvar.files": ["packages/app/src/routes/style.css"],
	"iconify.delimiters": ["/"],
	"iconify.includes": ["ph"],
	"emmet.syntaxProfiles": {
		"html": {
			"compactBooleanAttributes": true
		}
	},
	"githubIssues.queries": [
		{
			"label": "My Issues",
			"query": "default"
		},
		{
			"label": "Summerbugs",
			"query": "repo:${owner}/${repository} milestone:summerbugs state:open"
		},
		{
			"label": "Cahier des charges",
			"query": "repo:${owner}/${repository} milestone:\"Cahier des charges\" "
		},
		{
			"label": "Created Issues",
			"query": "author:${user} state:open repo:${owner}/${repository} sort:created-desc"
		},
		{
			"label": "All Issues",
			"query": "repo:${owner}/${repository} state:open sort:created-desc"
		}
	]
}
